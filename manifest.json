{
  "manifest_version": 2,
  "version": "1",
  "name": "pick a name",
  "permissions": [
    "alarms",
    "theme"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "55.0a2"
    }
  },
  "browser_action": {
   "default_icon": "toolbar-button.svg",
   "default_title": "[name of theme]",
   "default_popup": "toolbar-popup.html"
    }
  }